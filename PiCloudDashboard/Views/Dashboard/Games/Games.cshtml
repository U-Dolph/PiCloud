@model List<Game>

@{
    ViewData["Title"] = "PiCloud Games";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Games list</h1>

<div class="col-md-9">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i>Games</h3>
        </div>
        
        <div class="panel-body">
            <input type="button" value="New Game" class="btn btn-primary" onclick="@("window.location.href='/add/'");" />

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Version</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>
                                    <a href="/game/@item.Id">@item.Name</a></td>
                            <td>@item.Version</td>
                            <td>
                                <input type="button" value="Edit" class="btn btn-primary" onclick="@("window.location.href='/edit/" + @item.Id + "'");" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>