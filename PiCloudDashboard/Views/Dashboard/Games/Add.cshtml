@model Game

@{
    ViewData["Title"] = "PiCloud add game";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Edit</h1>

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i>New Game</h3>
        </div>

        <div class="col-md-9">
            <form asp-action="AddGame" asp-controller="Dashboard">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="form-control-label">Title:</label>
                    <input asp-for="Name" class="form-control" value="" placeholder="Name" required/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-control-label">Description:</label>
                    <textarea asp-for="Description" class="form-control" rows="7" cols="80" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Version" class="form-control-label">Version:</label>
                    <input asp-for="Version" class="form-control" value="" placeholder="1.0" required/>
                    <span asp-validation-for="Version" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>
